<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentApp.Pages.EmergencyPage"
             BackgroundColor="#FE3F3F"
             Title="EMERGENCY">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Emergency use only!" HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand"  TextColor="White" FontAttributes="Bold" FontSize="Large" FontFamily="Muli-SemiBold.ttf"/>
            <Image Source="error.png" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" HeightRequest="200" WidthRequest="200"/>
            <Label Text="I am in trouble" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" TextColor="White" FontAttributes="Bold" FontSize="Large" FontFamily="Muli-Regular.ttf"/>
            <Button Text="Send my location"  HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand"  TextColor="#FE3F3F" BackgroundColor="White" CornerRadius="10" FontAttributes="Bold" FontSize="Large"  FontFamily="Muli-SemiBold.ttf"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>